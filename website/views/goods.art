<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>商品详情-母婴团购</title>
  <link rel="stylesheet" type="text/css" href="/static/css/main.css">
  <link rel="stylesheet" type="text/css" href="/static/res/layui/css/layui.css">
  <script type="text/javascript" src="/static/res/layui/layui.js"></script>
    <script type="text/javascript" src="/static/js/jquery.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">

  <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
</head>
<body>
 {{include './header.art' }}
  <div class='shop-content'>
     <div class='show-wraper'>
       <div class='img-content'>
         <img src="{{getGoods.data.imgrc}}">
       </div>
       <div class='info-content'>
         <h2>{{getGoods.data.title}}</h2>
         <p class='color-red'>¥ {{getGoods.data.price}}</p>
         <div class='num-choose'><span>-</span><input type="" name="" /><span>+</span></div>
         <div class="buy-button">
           <button>立即购买</button>
            <button id='gotocart'>加入购物车</button>
         </div>
       </div>
       <div class=''>

       </div>
     </div>
  </div>
  <script type="text/javascript">
     if("{{session.userid}}"){
          var data={
                    uid:"{{session.userid}}",
                    gid:"001",
                    title:"{{getGoods.data.title}}",
                    price:"{{getGoods.data.price}}",
                    num:1
                  };
          function cart(){
                    $.ajax({
                        type:"post",
                        url:"./addcart",
                        dataType:"json",
                        data:data,
                        success:function(data) {
                          console.log(data);

                        },
                        error:function(msg) {
                            console.log(msg);
                        }
                    });
          }
         $("#gotocart").click(cart);
        }else{
          window.location.href="/login"
        }
  </script>
</body>
</html>